# Makefile

# Compiler
CC = gcc

# Compiler flags
CFLAGS = -Wall -Wextra -std=c99

# Target executable
TARGET = example

# Source files
SRCS = example.c matrix_determinant.c matrix_inversion.c matrix_ops.c matrix_transpose.c

# Object files (automatically generated by replacing .c with .o)
OBJS = $(SRCS:.c=.o)

# Libraries
LIBS = -lm

# Default target
all: $(TARGET)

# Link the object files to create the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS) $(LIBS)

# Compile .c files to .o files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean up object files and the executable
clean:
	rm -f $(OBJS) $(TARGET)

# Phony targets (to prevent conflicts with files named 'clean' or 'all')
.PHONY: all clean
